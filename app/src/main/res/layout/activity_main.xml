<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2E70BE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="180dp"
        android:background="@drawable/backlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/_3" />

        <EditText
            android:id="@+id/message"
            android:layout_width="450dp"
            android:layout_height="0dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="top"
            android:hint="Ivanov"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="31dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/ktqzj8_tif_1_"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="599dp"
        android:layout_height="47dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="180dp"
        android:background="@drawable/backlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/_3" />

        <EditText
            android:id="@+id/message2"
            android:layout_width="450dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="top"
            android:hint="***********"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/amkpvd_tif_1_"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:onClick="onClickStepsActivity2"
        android:id="@+id/button"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:layout_marginStart="434dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="432dp"
        android:background="@drawable/back"
        android:backgroundTint="@color/white"
        android:text="Sign in"
        android:textColor="#6E9CD2"
        android:textAllCaps="false"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="61dp"
        android:radius="20dp"
        android:text="Sign in"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="232dp"
        android:layout_height="58dp"
        android:text="Sign in"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="282dp" />

</androidx.constraintlayout.widget.ConstraintLayout>